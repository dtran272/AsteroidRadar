<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AsteroidNameText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/normal_spacing</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginBottom">@dimen/small_spacing</item>
    </style>

    <style name="AsteroidDateText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginBottom">@dimen/normal_spacing</item>
    </style>

</resources>
