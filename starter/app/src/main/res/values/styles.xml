<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/large_spacing</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginBottom">@dimen/small_spacing</item>
    </style>

    <style name="SimpleText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginBottom">@dimen/large_spacing</item>
    </style>

    <style name="DetailsLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/x_large_spacing</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
    </style>

    <style name="DetailsSimpleText">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginTop">@dimen/small_spacing</item>
    </style>

</resources>
